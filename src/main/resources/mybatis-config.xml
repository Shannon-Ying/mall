<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--开启驼峰命名-->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <!-- 自定义映射Handler-->
    <typeHandlers>
        <typeHandler handler="com.xuanhui.mall.handle.JsonArrayHandler" javaType="com.alibaba.fastjson.JSONArray"
                     jdbcType="VARCHAR"/>
    </typeHandlers>
</configuration>
